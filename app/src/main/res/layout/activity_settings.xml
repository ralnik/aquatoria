<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="22dp"
        android:background="@color/header_backround"
        android:gravity="center"
        android:text="НАСТРОЙКИ"
        android:textColor="@color/settings_color_text"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/txtMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="МУЗЫКА"
        android:textColor="@color/settings_color_titles"
        android:textSize="10sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/musicSeekBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/thumb" />

    <TextView
        android:id="@+id/txtEffects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="ЭФФЕКТЫ"
        android:textColor="@color/settings_color_titles"
        android:textSize="10sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/effectSeekBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:max="100"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/thumb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:text="ВРЕМЯ ОЖИДАНИЯ"
            android:textColor="@color/settings_color_titles"
            android:textSize="10sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editWaitTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/settings_color_text"
            android:ems="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="@color/settings_color_edit_text" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="МИН."
            android:textColor="@color/settings_color_titles"
            android:textSize="10sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </FrameLayout>

        <ImageView
            android:id="@+id/switcherTimer"
            android:layout_width="51dp"
            android:layout_height="14dp"
            app:srcCompat="@drawable/btn_wait_on" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAttention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:text="ВНИМАНИЕ"
        android:textColor="@color/settings_color_titles"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textAttention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:text="@string/settings_title_attention"
        android:textColor="@color/settings_color_titles"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="0"
            android:text="АДРЕС СЕРВЕРА"
            android:textColor="@color/settings_color_titles"
            android:textSize="10sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@color/settings_color_edit"
            android:ems="1"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="@color/settings_color_edit_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnSave"
            android:layout_width="89dp"
            android:layout_height="21dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_save_option_pressed" />
    </LinearLayout>
</LinearLayout>